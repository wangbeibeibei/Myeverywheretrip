    <TextView
        android:id="@+id/wecome"
        android:layout_width="@dimen/dp_201"
        android:layout_height="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_73"
        android:text="你好，为了获取更好的服务"
        android:textColor="#FA6A13"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/plsea_login"
        android:layout_width="@dimen/dp_198"
        android:layout_height="@dimen/dp_38"
        android:layout_below="@id/wecome"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_9"
        android:text="请登录到处旅行"
        android:textColor="#373737"
        android:textSize="@dimen/sp_27" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plsea_login"
        android:layout_marginTop="@dimen/dp_106"
        android:orientation="horizontal"
      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_31"
                android:src="@mipmap/phone"

                />

            <TextView
                android:id="@+id/phone_sum"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/phone_img"
                android:text="+86"
                android:textColor="#636363 "
                android:textSize="@dimen/sp_14"

                />

            <ImageView
                android:id="@+id/select_img"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@id/phone_sum"
                android:src="@mipmap/select"

                />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="@dimen/dp_118"
                android:layout_height="@dimen/dp_22"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@id/select_img"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="#C8C8C8"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/btn_yz"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_toRightOf="@id/et_phone"
                android:background="@drawable/bg_btn_ea_r15"
                android:text="发送验证码"
                android:textColor="#FEFEFE "
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_v"
        android:layout_width="@dimen/dp_329"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/ll"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#FA6A13 " />

    <LinearLayout
        android:id="@+id/ll_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_v"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_140"
        android:gravity="center_vertical"
       >

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/gra_d8_a9"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/or"
            android:textColor="@color/c_a9a9a9"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/gra_a9_d8" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/share_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_or"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wechat_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:src="@mipmap/wechat" />

        <ImageView
            android:id="@+id/weibo"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_sina" />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_qq" />

    </LinearLayout>


    <TextView
        android:id="@+id/wechat_login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_17"
        android:layout_below="@id/share_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_9"
        android:text="使用第三方登录"
        android:textSize="@dimen/dp_12" />


    <TextView
        android:id="@+id/login_regist"
        android:layout_width="@dimen/dp_209"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/agree_protocol"
        android:textSize="@dimen/sp_13" />


</RelativeLayout>