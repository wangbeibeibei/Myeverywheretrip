<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuidepageActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp"
        />
    <com.example.bei_i_bei.everywheretrip.widget.PreviewIndicator
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_8"
        android:id="@+id/pl"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_43"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="@dimen/dp_127"
        android:layout_height="@dimen/dp_40"
        android:text="立即体验"
        android:id="@+id/btn_tiyan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_43"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/btn_shape_color"
        android:textColor="@color/white"
        android:visibility="gone"
        />
</RelativeLayout>