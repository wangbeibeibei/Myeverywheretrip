<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_35"
        android:text="一小时前"
        android:textColor="@color/c_999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/data"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_15"
        android:text="上传了一条数据"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/me_money"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_375"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_me_money" />

    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/color_navigation"

        />

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_7"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/biaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="这里是标题"
                android:textColor="@color/c373737"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/biaoti"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:lineSpacingExtra="@dimen/dp_10"
                android:text="12312321321312"
                android:textColor="@color/c_636363"
                android:textSize="@dimen/sp_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content" />

            <com.bm.library.PhotoView
                android:id="@+id/imges"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_131"
                android:layout_below="@id/content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@mipmap/zhanweitu_home_kapian" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/imges"
                android:layout_marginTop="@dimen/dp_60"
                android:background="@color/c_eaeaea" />

            <ImageView
                android:id="@+id/praise_unselected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/view"
                android:layout_marginBottom="@dimen/sp_16"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@mipmap/praise_unselected" />

            <TextView
                android:id="@+id/praise_unselected_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginBottom="@dimen/sp_16"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toLeftOf="@id/praise_unselected"
                android:text="2"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/view"
                android:layout_marginBottom="@dimen/sp_16"
                android:layout_marginRight="@dimen/dp_86"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_toLeftOf="@id/praise_unselected_sum"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/comment_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginBottom="@dimen/sp_16"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toLeftOf="@id/comment"
                android:text="88"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
