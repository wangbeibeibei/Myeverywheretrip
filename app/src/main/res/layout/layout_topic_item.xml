<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_999999"
        android:text="一小时前"
        android:layout_marginLeft="@dimen/dp_35"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传了一条数据"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_333333"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@id/data"
        android:id="@+id/up"
        />
    <ImageView
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_375"
        android:background="@drawable/background_me_money"
        android:layout_marginLeft="@dimen/dp_23"
        android:id="@+id/me_money"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:background="@drawable/color_navigation"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_7"

        />
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_10"
        android:layout_below="@id/up"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/biaoti"
                android:text="这里是标题"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c373737"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_10"
                android:text="12312321321312"
                android:layout_below="@id/biaoti"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_636363"
                android:id="@+id/content"
                android:layout_marginRight="@dimen/dp_12"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"
                android:id="@+id/rv"
                />
            <com.bm.library.PhotoView
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_131"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_below="@id/content"
                android:id="@+id/imges"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_eaeaea"
                android:layout_marginTop="@dimen/dp_60"
                android:id="@+id/view"
                android:layout_below="@id/imges"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/praise_unselected"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_below="@id/view"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/sp_16"
                android:id="@+id/praise_unselected"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/praise_unselected_sum"
                android:layout_toLeftOf="@id/praise_unselected"
                android:text="2"
                android:layout_below="@id/view"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/sp_16"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999999"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/comment"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginBottom="@dimen/sp_16"
                android:layout_below="@id/view"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_86"
                android:layout_toLeftOf="@id/praise_unselected_sum"
                android:id="@+id/comment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/comment"
                android:text="88"
                android:layout_below="@id/view"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999999"
                android:id="@+id/comment_sum"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/sp_16"
                android:layout_marginRight="@dimen/dp_7"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
