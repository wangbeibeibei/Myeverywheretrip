<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/zhanweitu_home_kapian" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/userPhoto"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c373737"

        android:text="username" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/c_999999"
        android:layout_toRightOf="@id/userPhoto"
        android:text="createdAt" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_636363"
        android:layout_below="@id/createdAt"
        android:layout_marginLeft="@dimen/dp_67"
        android:layout_marginRight="@dimen/dp_20"
        android:id="@+id/content"
        android:lineSpacingExtra="@dimen/dp_5"
        />
    <!--android:maxLines="2"
    android:ellipsize="end"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
          android:background="@color/c_dcdcdc"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_58"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_below="@id/content"
        />

</RelativeLayout>
