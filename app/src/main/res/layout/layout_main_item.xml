<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_450"
        android:layout_margin="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_8"
        >
        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height= "@dimen/dp_450">

            <ImageView
                android:id="@+id/cardURL"
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_450"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_116"
                android:background="@color/c_60ffffff">

                <TextView
                    android:id="@+id/attractions"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_37"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/sp_27"
                    android:text="银座"
                    android:textColor="@color/c373737"
                    android:textSize="@dimen/sp_26" />

                <ImageView
                    android:id="@+id/attractions_img"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignBottom="@id/attractions"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toRightOf="@id/attractions"
                    android:background="@mipmap/location" />

                <TextView
                    android:id="@+id/place"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_39"
                    android:layout_toRightOf="@id/attractions_img"
                    android:text="东京"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:id="@+id/button_buy"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_29"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_34"
                    android:background="@drawable/shape_button"
                    android:text="@string/money" />

                <TextView
                    android:id="@+id/crazy_shopping_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attractions"
                    android:text="疯狂购物买买买"
                    android:textColor="@color/c_636363"
                    android:layout_marginLeft="@dimen/dp_15"

                    android:textSize="@dimen/dp_18" />

                <TextView
                    android:id="@+id/people_buy"
                    android:layout_width="@dimen/dp_61"
                    android:layout_height="@dimen/dp_17"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/button_buy"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="530人购买"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textColor="@color/c_636363"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
