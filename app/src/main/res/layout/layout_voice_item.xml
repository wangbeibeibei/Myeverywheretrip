<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/chatAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_41"
        android:text="刚刚"
        android:textColor="@color/c_999999"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_174"
        android:background="@drawable/background_me_money"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_51"
        android:id="@+id/me_money"
        />
    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:background="@drawable/color_navigation"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_42"
        />

    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:background="@drawable/color_navigation"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/me_money"
        />
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatAt"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_9"
        android:text="更新了一条数据" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_102"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_10"
        android:layout_below="@id/info"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_20"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/line_button_paly_highlight"
                android:id="@+id/play"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_eaeaea"
                android:layout_marginTop="@dimen/dp_60"
                android:id="@+id/view"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/praise"
                android:id="@+id/give_a_like"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="137"
               android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/give_a_like"
                android:layout_marginRight="@dimen/dp_11"
                android:id="@+id/give_a_like_sum"
                android:layout_marginBottom="@dimen/dp_12"
                android:textSize="@dimen/sp_14"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment"
                android:src="@mipmap/comment"
                android:layout_toLeftOf="@id/give_a_like_sum"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_12"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/comment"
                android:text="88"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_7"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999999"
                android:id="@+id/comment_sum"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
