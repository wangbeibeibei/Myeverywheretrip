<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".ui.main.fragment.VerificationFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        >
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/back_white"
            android:id="@+id/finlish_img"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/to_resend"
            android:text="重新发送"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_38"
        android:text="请输入验证码"
        android:layout_marginLeft="@dimen/dp_23"
        android:textSize="@dimen/sp_27"
        android:textColor="#373737"
        android:id="@+id/verification_code"
        android:layout_marginTop="@dimen/dp_44"
        />
    <com.example.bei_i_bei.everywheretrip.widget.IdentifyingCodeView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_83"
        android:id="@+id/icv"
        app:icv_et_number="4"
        app:icv_et_width="@dimen/dp_44"
        app:icv_et_divider_drawable="@drawable/divider_icv"
        app:icv_et_text_color="@color/c_636363"
        app:icv_et_text_size="@dimen/sp_20"
        app:icv_et_height="@dimen/dp_56"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_56"/>

    <TextView
        android:text="@string/wait_please"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_33"
        android:id="@+id/tv_wait"
        android:textColor="@color/c_fa6a13"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>