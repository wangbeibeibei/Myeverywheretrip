<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_133"
                android:layout_height="@dimen/dp_176"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/zhanweitu_home_kapian" />

            <TextView
                android:id="@+id/title_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_toRightOf="@id/img"
                android:text="title_collection"
                android:textColor="@color/c_333333"

                />

            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_collection"
                android:layout_margin="@dimen/dp_10"
                android:layout_toRightOf="@id/img"
                android:text="intro_collection"
                android:textColor="@color/c_333333"

                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
