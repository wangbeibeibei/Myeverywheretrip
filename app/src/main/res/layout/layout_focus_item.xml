<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_6"
        >
        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_120"
            >
            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_toRightOf="@id/img"
                android:text="1"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:id="@+id/focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toRightOf="@id/img"
                android:text="248关注"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/location_img"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_below="@+id/focus"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@id/img"
                android:src="@mipmap/location" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/focus"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/location_img"
                android:text="东京"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_12" />


            <ImageView
                android:id="@+id/author_img"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_below="@id/location_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@id/img"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/author_img"
                android:text="日本国家旅游局专栏作者"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
